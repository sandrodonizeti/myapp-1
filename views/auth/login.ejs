<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/pratica.css" />
    <title>Entrar</title>
  </head>

  <body>
    <header>
   <div class="container">
    <div class="logo">
      <img src="/images/Tweet-Web.png" width=" 300 px" />
    </div>
   </div>
    </header>
    <main>
      <div class="container">
        <div id="login">
          <% if (locals.errorMessage) { %>
          <p class="error-message"><%= errorMessage %></p>
          <% } %>
          <div class="log">
            <form action="/autenticacao/login" method="post" class="card">
              <div class="card-header">
                <h2><img src="/images/logo.png" width=" 300 px" /></h2>
              </div>
              <div class="card-content">
                <div class="card-content-area">
                  <label for="usuario">Usu√°rio</label>
    
                  <input
                    type="text"
                    id="usuario"
                    name="usernameOrEmail"
                    autocomplete="off"
                    required/>
                </div>
                <div class="card-content-area">
                  <label for="password">Senha</label>
                  <input
                    type="password"
                    id="password"
                    name="password"
                    autocomplete="off"
                    maxlength="30"
                    required/>
                  <i
                    class="password-icon toggle-password"
                    onclick="togglePasswordVisibility('password')"
                    >üëÅÔ∏è</i
                  >
                </div>
              </div>
              <div class="card-footer">
                <input type="submit" value="Login" class="submit" />
              </div>
            </form>
          </div>
        </div>
        <script src="/js/script.js"></script>
      </div>
    </main>
    <footer>
      <div class="container">
        <h3> <p>&copy;2024 Tweet|Web</p></h3>
      </div>
    </footer>
  </body>
</html>
